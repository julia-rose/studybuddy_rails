<% if @deck.errors.any? %>
<h2>Errors:</h2>
<ul>
	<% @deck.errors.full_messages.each do |error| %>
		<li> <%= error %> </li>
	<% end %>
</ul>
<% end %>

<h1>Create a new deck</h1>

<%= form_for @deck do |f| %>
   <%= f.label :name %>
   <%= f.text_field :name %>

   <%= f.label :description %>
   <%= f.text_area :description %>

   <%= f.submit 'Submit', id: 'submit' %>
 <% end %>